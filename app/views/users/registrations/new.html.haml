.container.login-container
  .row
    .col-md-12.login-form-1
      %h3 User Sign up
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .form-group
          = f.text_field :name, class: "form-control", :placeholder => "Name"
        .form-group
          = f.text_field :city, class: "form-control", :placeholder => "City"
        .form-group
          = f.text_field :phone_number, class: "form-control", :placeholder => "Phone Number"
        .form-group
          = f.email_field :email, class: "form-control", :placeholder => "Email *", autofocus: true, autocomplete: "email"
        .form-group
          = f.password_field :password, class: "form-control", :placeholder => "Password *", autocomplete: "current-password"
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
        .form-group
          = f.password_field :password_confirmation, class: "form-control", :placeholder => "Password Confirmation *", autocomplete: "new-password"
        .form-group
          = f.submit "Sign up", class: "btnSubmit"
        .form-group
          = render "users/shared/links"